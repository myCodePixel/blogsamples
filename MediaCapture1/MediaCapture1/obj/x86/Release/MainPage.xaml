<Page
    x:Class="MediaCapture1.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MediaCapture1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Button x:ConnectionId='1' x:Name="button" Content="Capture Pic" HorizontalAlignment="Left" Margin="39,36,0,0" VerticalAlignment="Top" Height="81" Width="159"                     />
        <Image x:ConnectionId='2' x:Name="image" HorizontalAlignment="Left" Height="163" Margin="284,10,0,0" VerticalAlignment="Top" Width="225"/>
        <Button x:ConnectionId='3' x:Name="button1" Content="CaptureVideo" HorizontalAlignment="Left" Margin="39,223,0,0" VerticalAlignment="Top" Height="78" Width="169"                      />
        <MediaElement x:ConnectionId='4' x:Name="mediaElement" HorizontalAlignment="Left" Height="249" Margin="685,165,0,0" VerticalAlignment="Top" Width="572" AreTransportControlsEnabled="True"/>
        <Button x:ConnectionId='5' x:Name="button2" Content="Record Audio" HorizontalAlignment="Left" Margin="51,413,0,0" VerticalAlignment="Top" Height="98" Width="134"/>
        <ComboBox x:ConnectionId='6' x:Name="AudioFormat" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="245,440,0,0" VerticalAlignment="Top" Width="250" Height="46" PlaceholderText="Select Audio Format"                                                />
        <TextBlock x:ConnectionId='7' x:Name="textBlock" HorizontalAlignment="Left" Margin="245,495,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="28" Width="211"/>
        <AppBarButton x:ConnectionId='8' x:Name="appBarButton" HorizontalAlignment="Left" Icon="Accept" Label="Record" Margin="620,569,0,0" VerticalAlignment="Top"                     />
        <AppBarButton x:ConnectionId='9' x:Name="appBarButton1" HorizontalAlignment="Left" Icon="Accept" Label="Stop" Margin="772,569,0,0" VerticalAlignment="Top"                   />
        <AppBarButton x:ConnectionId='10' x:Name="appBarButton2" HorizontalAlignment="Left" Icon="Accept" Label="save" Margin="936,583,0,0" VerticalAlignment="Top"                   />
        <TextBlock x:ConnectionId='11' x:Name="Duration" Text="{Binding}" HorizontalAlignment="Left" Margin="671,446,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Height="98" Width="354"/>
        <ComboBox x:ConnectionId='12' x:Name="AudioQuality" ItemsSource="{Binding}" HorizontalAlignment="Left" Margin="245,528,0,0" VerticalAlignment="Top" Width="250" Height="50" PlaceholderText="Select AudioQuality"                                                 />

    </Grid>
</Page>

