<Page
    x:Class="AppDataSettings.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AppDataSettings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="g1"  Background="White">
        <ComboBox x:Name="comboBox"  HorizontalAlignment="Left" Margin="119,132,0,0" VerticalAlignment="Top" Width="515" Height="54" PlaceholderText="Select the background Color" FontSize="33.333">
            <x:String>Red</x:String>
            <x:String>Green</x:String>
            <x:String>Yellow</x:String>
            <x:String>Aqua</x:String>
            <x:String>Bisque</x:String>
            <x:String>Blue</x:String>
           
        </ComboBox>
        <Button x:Name="button" Content="Set Background Color" HorizontalAlignment="Left" Margin="160,262,0,0" VerticalAlignment="Top" Height="59" Width="410" FontSize="33.333" Click="button_Click"/>
    </Grid>
</Page>
